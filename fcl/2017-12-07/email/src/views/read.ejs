<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <title>Title</title>
</head>

<body>
    <div class="read">
        <h1 name="H" id="H"> 邮 件 列 表 </h1>
        <input type="hidden" name='username' id='username' value=<%= name %> >
        <table>
            <thead>
                <tr>
                    <th>序号</th>
                    <th>标题</th>
                    <th>发件人</th>
                    <th>状态</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
        <a href="/users/home">返回</a>
    </div>
</body>
<script src="http://cdn.static.runoob.com/libs/jquery/1.10.2/jquery.min.js"></script>
<script>
    $(function () {
        var user = $("#username").val();
        //查看邮件
        //ajax请求
        $.ajax({
            url: '/api/read/' + user,
            data: {
            },
            type: 'get',
            success: function (data, status) {
                console.log(data);
                //获取data
                if (data !== '0') {
                    data.forEach(function (msg) {
                        var state;
                        if (msg.iread === 0) {
                            state = '未读';
                        } else {
                            state = '已读';
                        }
                        var newTr = $('<tr class="id"></tr>');
                        var newId = $('<td class="mailid">' + msg.id + '</td>');
                        var newTitle = $('<td>' + msg.title + '</td>');
                        var newSender = $('<td>' + msg.sender + '</td>');
                        var newState = $('<td>' + state + '</td>');
                        newTr.append(newId);
                        newTr.append(newTitle);
                        newTr.append(newSender);
                        newTr.append(newState);
                        $('tbody').append(newTr);
                    });
                    $('.id').on('click', function (event) {
                        var id = Number($(event.target).parent().find('.mailid').html());
                        location.href = '/mails/readcontent/' + id;
                    })

                } else {
                    alert('获取邮件失败！');
                }
                console.log(data);
            },
            error: function (data, err) {
                console.log('ajax请求失败');
                return;
            }
        });
    })
</script>



</html>