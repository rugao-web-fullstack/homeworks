<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/stylesheets/login.css" />
  <link href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
  <h1 class="title">登录界面</h1>
  
  <div class="container">
      <form class="form-horizontal" role="form" action='' method='POST'>
        <div class="form-group">
          <label for="firstname" class="col-sm-2 control-label col-sm-offset-1">用户名</label>
          <div class="col-sm-6">
            <input type="text" class="form-control" id="username" placeholder="请输入用户名">
          </div>
        </div>
        <div class="form-group">
          <label for="lastname" class="col-sm-2 control-label col-sm-offset-1">密码</label>
          <div class="col-sm-6">
            <input type="password" class="form-control" id="pwd" placeholder="请输入密码">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-10">
            <input type="button" value='登录' id='submit' class="btn btn-info col-sm-2">
          </div>
        </div>
      </form>
    </div>

  <!-- <script src='/javascripts/jquery.min.js'></script> -->
  <script src="http://cdn.static.runoob.com/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
  <script>
    $(function () {
      $('#submit').click(function () {

        if ($('#username').val() && $('#pwd').val()) {
          let username = $('#username').val();
          let pwd = $('#pwd').val();
          $.ajax({
            url: '/api/users',
            type: 'post',
            data: {
              action:'login',
              username: username,
              password: pwd
            },
            success: function (data, status) {
              console.log(data);  
              if (data == 0) {
                alert('用户不存在');
                return;
              } else if (data == 1) {
                alert('用户名密码错误');
              } else {
                location.href = data;
              }

            },
            error: function (data, err) {
              console.log(err);
              return;
            }
          });

        } else {
          alert('请填写完整');
        }

      });



    });


  </script>


</body>

</html>